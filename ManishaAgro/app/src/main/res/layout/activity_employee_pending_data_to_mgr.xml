                android:text="Selfie Image"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                android:background="@color/dateBackground"
                android:textColor="@color/FloatColor"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Follow up"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainRelRec1"
            android:layout_below="@id/buttonLin">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textPendingCount"
                android:text=""
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="@color/red"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textPennding"
                android:layout_below="@+id/textPendingCount"
                android:text=""
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/customerText"/>
            <androidx.recyclerview.widget.RecyclerView

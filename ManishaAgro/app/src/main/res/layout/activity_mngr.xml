<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
tools:context=".manager.ManagerActivity"
android:layout_height="match_parent"
android:layout_width="match_parent"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android">


<com.google.android.material.appbar.AppBarLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/appbar1">

    <androidx.appcompat.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/Mngrtoolbar">
    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.tabs.TabLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:tabBackground="@color/colorAccent"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:id="@+id/tab2"
        />



</com.google.android.material.appbar.AppBarLayout>

<androidx.viewpager.widget.ViewPager
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/viewpager1"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fabMgrActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:fab_addButtonColorNormal="@color/FloatColor"
        app:fab_addButtonColorPressed="@color/colorAccent"
        app:fab_addButtonPlusIconColor="@color/whiteTextColor"
        app:fab_labelStyle="@style/MenuFab"
        android:elevation="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        android:layout_gravity="bottom|end"
        android:visibility="gone"
        android:scaleType="fitXY"
        app:fab_addButtonSize="normal"
        android:padding="5dp"
        android:layout_margin="@dimen/fab_margin">
        <com.getbase.floatingactionbutton.FloatingActionButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/FloatColor"
            app:fab_colorPressed="@color/colorAccent"
            android:visibility="gone"
            app:fab_icon="@drawable/ic_add"
            app:fab_size="mini"
            android:id="@+id/fabMgrActivity1"
            app:fab_title="Expense Add"
            android:layout_marginBottom="100dp"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
            android:layout_gravity="bottom|end"
            android:contextClickable="false"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"

            />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/FloatColor"
            app:fab_colorPressed="@color/colorAccent"
            app:fab_icon="@drawable/ic_add"
            app:fab_size="mini"
            android:visibility="gone"
            android:id="@+id/fabMgrActivity2"
            app:fab_title="EmpId Expense Map"
            android:contextClickable="false"
            android:layout_marginBottom="150dp"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
            android:layout_gravity="bottom|end"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
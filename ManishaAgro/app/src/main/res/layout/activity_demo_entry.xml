    <androidx.cardview.widget.CardView
        android:id="@+id/visitCardFollowup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteCardColor"
        android:layout_marginBottom="@dimen/loginViewsMargin"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:elevation="5dp"
        app:cardCornerRadius="@dimen/loginCardRadius"

        >
        <LinearLayout
            android:id="@+id/CardLinfallow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/linearParent"

            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:gravity="center"
                android:text="FOLLOW UP"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:gravity="left"
                android:text="Follow-up is Required ?"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:weightSum="2">
                    <RadioGroup
                        android:orientation="horizontal"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:id="@+id/RadioGropFollowup">
                        <RadioButton
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/radioButtonYes"
                            android:layout_weight="1"
                            android:text="YES"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"

                            />

                        <RadioButton
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/radioButtonNo"
                            android:layout_weight="1"
                            android:text="NO"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"

                            />
                    </RadioGroup>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/visitCardFollowupRequired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteCardColor"
        android:layout_marginBottom="@dimen/loginViewsMargin"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/loginCardRadius"

        >
        <LinearLayout
            android:id="@+id/CardLinfallowRequired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/linearParent"

            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IF YES"
                android:id="@+id/ifYesText"
                android:gravity="left"
                android:textSize="15sp"

                android:textColor="@color/colorAccent"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/followdateimag"
                    android:layout_marginTop="20dp"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/calendar11"
                    android:tint="@color/colorAccent"
                    android:layout_marginLeft="10dp"/>
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/texFollowdt"
                    android:layout_toRightOf="@+id/followdateimag"

                    >


                    <EditText
                        android:id="@+id/editTextFollowupDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="FOLLOW UP DATE"
                        android:textSize="15sp"
                        android:inputType="date"
                        android:textColor="@color/colorAccent"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/visitCardButtonDemmoSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SubmitDemoRel"
                android:layout_gravity="center"

                >
                <Button
                    android:id="@+id/SubmitDemo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteTextColor"
                    android:backgroundTint="@color/FloatColor"
                    android:text="NEXT"
                    android:textStyle="bold"
                    />




            </RelativeLayout>




    </androidx.cardview.widget.CardView>



</LinearLayout>
</ScrollView>
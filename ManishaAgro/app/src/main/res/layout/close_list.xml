<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:background="?android:attr/selectableItemBackground">




    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:map="http://schemas.android.com/tools"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#ffebcc"
        app:cardCornerRadius="@dimen/cardResdius"
        app:cardElevation="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MaincardStarEndRead">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardStarEndRead">

                <androidx.cardview.widget.CardView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:map="http://schemas.android.com/tools"
                    android:id="@+id/cardView2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#ffebcc"
                    app:cardCornerRadius="@dimen/cardResdius"
                    app:cardElevation="7dp">

                    <RelativeLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/FloatColor"
                            android:text="START KILOMETER"
                            android:layout_marginLeft="2dp"
                            android:textAlignment="viewStart"
                            android:id="@+id/startkilotext"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                        <RelativeLayout
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/mainRel3"
                            android:layout_below="@+id/startkilotext"
                            >
                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:id="@+id/CustLin1"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/custNM1"

                                    android:src="@drawable/calendar11"
                                    android:tint="@color/customerText"
                                    />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/startdate1"
                                android:text=""
                                android:textColor="@color/customerText"
                                android:layout_toRightOf="@+id/CustLin1"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:textSize="11sp"
                                android:textStyle="bold"

                                />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/subRelstart"
                            android:layout_below="@+id/mainRel3"

                            >
                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:id="@+id/empduration2"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/travelDateImg1"

                                    android:src="@drawable/kmpng"
                                    android:tint="@color/customerText"

                                    />

                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/startkm1"
                                android:layout_toRightOf="@+id/empduration2"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/customerText"
                                android:layout_marginLeft="5dp"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:text=""/>

                        </RelativeLayout>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:map="http://schemas.android.com/tools"
                    android:id="@+id/cardView1"
                    android:layout_toRightOf="@+id/cardView2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="#ffebcc"
                    app:cardCornerRadius="@dimen/cardResdius"
                    app:cardElevation="7dp">
                    <RelativeLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/FloatColor"
                            android:text="END KILOMETER"
                            android:textAlignment="viewStart"
                            android:id="@+id/endkilotext"
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                        <RelativeLayout
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/mainRel1"
                            android:layout_below="@+id/endkilotext">
                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:id="@+id/CustLin"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/custNM"

                                    android:src="@drawable/calendar11"
                                    android:tint="@color/customerText"
                                    />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/startdate"
                                android:text=""
                                android:textColor="@color/customerText"
                                android:layout_toRightOf="@+id/CustLin"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:textSize="11sp"
                                android:textStyle="bold"

                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/subRel1"
                            android:layout_below="@+id/mainRel1"

                            >
                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:id="@+id/empduration1"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/travelDateImg"

                                    android:src="@drawable/kmpng"
                                    android:tint="@color/customerText"

                                    />

                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/startkm"
                                android:layout_toRightOf="@+id/empduration1"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/customerText"
                                android:layout_marginLeft="5dp"
                                android:textStyle="bold"
                                android:textSize="11dp"
                                android:text=""/>

                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>




            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardStarEndRead1"
            android:layout_below="@+id/cardStarEndRead">
            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:map="http://schemas.android.com/tools"
                android:id="@+id/cardViews3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#ffebcc"
                app:cardCornerRadius="@dimen/cardResdius"
                app:cardElevation="7dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/subRelTotalkm"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/totalTextkm"
                            android:text="Total KM : "
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/customerText"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/TextTotal"
                            android:layout_toRightOf="@+id/totalTextkm"

                            android:textColor="@color/customerText"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:text=""/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/subRelCloseRoute"
                        android:layout_below="@+id/subRelTotalkm"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/closeRouteTextkm"
                            android:text="Route : "
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/customerText"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/TextCloseRoutes"
                            android:layout_toRightOf="@+id/closeRouteTextkm"

                            android:textColor="@color/customerText"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:text=""/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/subRelCloseRemark"
                        android:layout_below="@+id/subRelCloseRoute"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/closeRmksTextkm"
                            android:text="Remark : "
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/customerText"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/TextCloseRmksa"
                            android:layout_toRightOf="@+id/closeRmksTextkm"

                            android:textColor="@color/customerText"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:text=""/>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        </RelativeLayout>







    </androidx.cardview.widget.CardView>



    <!-- <View
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:layout_alignStart="@+id/layoutName"
         android:layout_alignLeft="@+id/layoutName"
         android:layout_alignParentBottom="true"
         android:background="#d4d4d4" />-->

</RelativeLayout>
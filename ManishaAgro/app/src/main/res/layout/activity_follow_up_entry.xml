<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".employee.FollowUpEntryActivity">




<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/appbar"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/toolbarFollowup">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/visitCardDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteCardColor"
        android:layout_marginBottom="@dimen/loginViewsMargin"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#ffe0b3"

        android:elevation="5dp"
        app:cardCornerRadius="@dimen/loginCardRadius"

        >
        <LinearLayout
            android:id="@+id/CardLin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/linearParent"

            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#003366"
                android:textSize="20sp"
                android:id="@+id/followuptextset"
                android:gravity="center"
                android:text="FOLLOW UP ENTRY"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputFarmName"
                    >

                    <TextView
                        android:id="@+id/textFarmName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FARMER FULL NAME"
                        android:layout_marginLeft="10dp"
                        android:textColor="#003366"
                        android:textSize="15sp"

                        />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputobserv"
                    android:layout_below="@+id/textInputFarmName">

                    <EditText
                        android:id="@+id/editObservation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="OBSERVATION"
                        android:textColorHint="#003366"
                        android:textSize="15sp"
                        android:textColor="#003366"
                        android:backgroundTint="#003366"
                        android:inputType="text|textMultiLine"
                        android:scrollbars="vertical"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputReview"
                    android:layout_below="@+id/textInputobserv">

                    <EditText
                        android:id="@+id/editTextReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="REVIEWS"
                        android:textSize="15sp"
                        android:textColor="#003366"
                        android:backgroundTint="#003366"
                        android:inputType="text|textMultiLine"
                        android:scrollbars="vertical"
                        />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CUSTOMER RATING"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#003366"
                    android:id="@+id/rating"
                    android:layout_below="@+id/textInputReview"/>



                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:layout_below="@+id/rating"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:numStars="5"
                    android:theme="@style/RatingBar"
                    android:stepSize="1.0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5/5"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:id="@+id/ratingText"
                    android:textColor="#003366"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/ratingBar"/>


            </RelativeLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/visitCardImadeFallowup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteCardColor"
        android:layout_marginBottom="@dimen/loginViewsMargin"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#ffe0b3"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/loginCardRadius"

        >
        <LinearLayout
            android:id="@+id/CardLin4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/linearParent"

            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#003366"
                android:textSize="20sp"
                android:text="FOLLOW UP IMAGE"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:id="@+id/photoDemo"
                    android:src="@drawable/user"
                    android:background="#003366"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clickImage"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_photo_camera"
                    android:backgroundTint="#003366"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/takephotofollowup"
                    android:text="Take Photo"
                    android:textColor="#003366"
                    android:textSize="10dp"/>
                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@+id/progress"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />



            </LinearLayout>





        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/visitCard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/folloUpSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteTextColor"
                android:backgroundTint="@color/FloatColor"
                android:text="SUBMIT"

                android:textStyle="bold"
                />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
</ScrollView>
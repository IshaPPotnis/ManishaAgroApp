    <com.google.android.material.textfield.TextInputLayout android:layout_marginTop="@dimen/signup_text_margin_top" style="@style/parent">

    <EditText style="@style/modifiedEditText" android:hint="Mobile Number" android:maxLines="1" android:inputType="text"/>


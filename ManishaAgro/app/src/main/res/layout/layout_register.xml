    <com.google.android.material.textfield.TextInputLayout android:layout_marginTop="@dimen/signup_text_margin_top" style="@style/parent">

    <EditText style="@style/modifiedEditText" android:hint="@string/login_email_hint" android:maxLines="1" android:inputType="textEmailAddress"/>

</com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout android:layout_marginTop="@dimen/signup_text_margin_top" style="@style/parent">

    <EditText style="@style/modifiedEditText" android:hint="@string/login_password_hint" android:maxLines="1" android:inputType="textPassword"/>

</com.google.android.material.textfield.TextInputLayout>

    <Button android:layout_gravity="center" style="@style/loginButton" android:text="Register"/>

    <TextView
